#include<bits/stdc++.h>
using namespace std;
int max(int a,int b)
{
	return a>b?a:b;
}
int main()
{
	int n;
	cin>>n;
	int num=INT_MIN;
	vector<int> vec(n);
	for(int i=0;i<n;i++)
	{
		cin>>vec[i];
	}
	sort(vec.begin(),vec.end());
	int a=n;
	for(int i=0;i<n;i++)
	{
		num=max(num,a*vec[i]);
		a--;
	}
	cout<<num<<"\n";
	return 0;	
}
